<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="glyphicon glyphicon-chevron-down"></span>
      </button>
      <%= link_to APP_NAME, root_path, :class => 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse">
      <% if current_user %>
        <p class="navbar-text">Logged in as <%= current_user.user_name %></p>
      <% else %>
        <p class="navbar-text"></p>

      <% end %>

      <ul class="nav navbar-nav">
        <li><%= link_to "Events", events_path  %></li>
        <li><%= link_to "Users", users_path  %></li>
      </ul>

      <% if current_user  %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.user_name %><span class="glyphicon glyphicon-user"></a>
          <ul class="dropdown-menu">
            <li><%= link_to "My Home Page", home_path %></li>
            <li><%= link_to "My Public Profile", user_path(current_user) %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li class="dropdown-header">Nav header</li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
      <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Login", login_path  %></li>
      </ul>
      <% end %>
    </div><!--/.nav-collapse -->
  </div>
</div>