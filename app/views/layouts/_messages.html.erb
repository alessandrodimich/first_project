<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-offset-3">
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= value %>
    </div>
    <% end %>
  </div>
</div>
</div>
