<%= provide(:title, "#{full_name(@user)}") %>

<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-xs-8 col-xs-offset-1">
    <p>
      <strong>Name:</strong>
      <%= full_name(@user) %>
      </p>

    <p>
      <strong>Username:</strong>
      <%= @user.user_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <section>
      <%= render 'shared/stats' %>
    </section>
    <br>
    <section>
      <%= render 'follow_form' if current_user %>
    </section>


  </div>
</div>







<%= render 'microposts' %>


<%= link_to 'Edit', edit_user_path(@user) %>
