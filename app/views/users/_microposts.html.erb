<div class="row">

    <% if @user.microposts.any? %>
      <div class="col-xs-8 col-xs-offset-1">
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <br>
      </div>
      <div class="col-xs-8 col-xs-offset-1">
        <ul class="microposts">
          <%= render @microposts %>
        </ul>
      </div>
    <% end %>
</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-1">
    <%= will_paginate @microposts %>
  </div>
</div>


